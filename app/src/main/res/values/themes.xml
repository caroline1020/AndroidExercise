<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidExercise" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#3A4051</item>
        <item name="colorPrimaryVariant">#333847</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DetailTheme" parent="Theme.AndroidExercise">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/divider</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="actionBarTheme">@style/Theme.DetailTheme.AppBar</item>
    </style>
    <style name="Theme.DetailTheme.AppBar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/black</item> <!-- sets the color for the back arrow -->
    </style>

    <style name="StaffTagText" >
        <item name="android:textColor">@color/white</item>
        <item name="android:text">@string/staff</item>
        <item name="android:textSize">10sp</item>
        <item name="android:background">@drawable/bg_staff_tag</item>
    </style>

</resources>